  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/"><i class="fas fa-angle-double-left"></i> All Coins</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark"></h2>
